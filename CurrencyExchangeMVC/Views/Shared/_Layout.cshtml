<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="container">
        <!-- Static navbar -->
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Currency Exchanger".ToUpper(), "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>

                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li id="home-tab">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li id="exchange-tab">@Html.ActionLink("Exchange", "Exchange", "Home")</li>
                        <li id="about-tab">@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
            <!--/.container-fluid -->
        </nav>

        <div class="body-content">
            @RenderBody()

            <hr />

            <footer>
                <p class="pull-left"><strong>&copy; @DateTime.Now.Year - Currency Exchanger.</strong></p>
                <p class="pull-right"><a href="http://aalhour.github.io" target="_blank"><strong>AHMAD ALHOUR</strong></a></p>
            </footer>
        </div>
    </div>
    <!-- /container -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
